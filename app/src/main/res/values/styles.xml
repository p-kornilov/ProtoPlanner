<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/gray</item>
<!--        <item name="android:colorBackground">@color/white</item>-->
    </style>

    <style name="AppTheme.WhiteBackground" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/white</item>
        <!--        <item name="android:colorBackground">@color/white</item>-->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ToolBarStyle" parent="AppTheme.PopupOverlay">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
<!--        <item name="colorPrimary">@android:color/transparent</item>
        <item name="windowActionBarOverlay">true</item>-->
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
<!--        <item name="colorPrimary">@android:color/transparent</item>
        <item name="windowActionBarOverlay">true</item>-->
    </style>

    <style name="HelperText">
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/textHelper</item>
    </style>

    <style name="BaseText">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SecondaryText">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/textLightSecondary</item>
    </style>

    <style name="SpinnerText">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="HintError">
        <item name="android:textColor">@color/textInputError</item>
    </style>

    <style name="HintNormal">
        <item name="android:textColor">@color/colorAccent</item>
    </style>
</resources>
