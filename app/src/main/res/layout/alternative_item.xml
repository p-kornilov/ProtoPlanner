    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="@dimen/record_left_padding"
        android:layout_marginTop="130dp"
        android:background="@color/black_divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <ImageButton
        android:id="@+id/rf_comment_edit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:background="@null"
        android:cropToPadding="false"
        android:padding="12dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider2"
        app:srcCompat="@drawable/ic_edit_black_24dp" />

    <ViewSwitcher
        android:id="@+id/rf_comment_switcher"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="@dimen/record_left_padding"
        android:layout_marginTop="13dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider2">

        <TextView
            android:id="@+id/rf_comment_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:ellipsize="start"
            android:fontFamily="@font/roboto"
            android:linksClickable="true"
            android:singleLine="false"
            android:text="Комментарий для описания товара и что-то еще http://test.com ура рвап впвап ва п рв п рвап рвап рв апра ура ура!!!"
            android:textColor="@android:color/black"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/rf_comment_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Комментарий для описания товара и что-то еще http://test.com ура рвап впвап ва п рв п рвап рвап рв апра ура ура!!!"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:paddingTop="0dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:focusedByDefault="true"
            />

    </ViewSwitcher>

    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="@dimen/record_left_padding"
        android:layout_marginTop="13dp"
        android:background="@color/black_divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rf_comment_switcher" />


    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/record_left_padding"
        android:layout_marginTop="13dp"
        android:fontFamily="@font/roboto"
        android:paddingBottom="13dp"
        android:text="Pictures"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider1" />

    <ImageButton
        android:id="@+id/rf_add_foto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="0dp"
        android:background="@null"
        android:cropToPadding="false"
        android:padding="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider1"
        app:srcCompat="@drawable/ic_add_to_photos_black_24dp" />

