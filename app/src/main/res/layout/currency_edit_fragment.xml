<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="0px"
        android:layout_height="0px"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/cef_name_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/record_left_padding"
        android:layout_marginStart="@dimen/record_left_padding"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/cef_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/cef_code_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/record_left_padding"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="4dp"

        app:layout_constraintEnd_toStartOf="@+id/cef_symbol_layout"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cef_name_layout">

        <EditText
            android:id="@+id/cef_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Code" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="3 capital letters"
            android:theme="@style/HelperText" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/cef_symbol_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="@dimen/record_left_padding"
        android:layout_marginStart="4dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/cef_code_layout"
        app:layout_constraintTop_toBottomOf="@id/cef_name_layout">

        <EditText
            android:id="@+id/cef_symbol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Symbol" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="Symbol or unicode in form \U+1234"
            android:theme="@style/HelperText" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/cef_position_helper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/roboto"
        android:text="Symbol position"
        android:textColor="@color/helperText"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cef_symbol_layout" />

    <Spinner
        android:id="@+id/cef_position"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/record_left_padding"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:entries="@array/list_currency_sign_position"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@id/cef_card_preview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cef_position_helper" />

    <CheckBox
        android:id="@+id/cef_spacing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/record_left_padding"
        android:layout_marginTop="16dp"
        android:text="Enable spacing"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cef_position" />

    <android.support.v7.widget.CardView
        android:id="@+id/cef_card_preview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="@dimen/record_left_padding"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@id/cef_spacing"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/cef_position_helper">

        <TextView
            android:id="@+id/alt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto"
            android:singleLine="false"
            android:text="$100.00"
            android:textColor="@android:color/black"
            android:textSize="20sp" />
    </android.support.v7.widget.CardView>

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="@dimen/record_left_padding"
        android:layout_marginTop="13dp"
        android:background="@color/black_divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cef_spacing" />


    <TextView
        android:id="@+id/cef_rate_caption"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="@dimen/record_left_padding"
        android:fontFamily="@font/roboto"
        android:gravity="center_vertical"
        android:text="Exchange"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider2" />

    <CheckBox
        android:id="@+id/cef_manual_rate_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/record_left_padding"
        android:layout_marginTop="8dp"
        android:text="Auto update rate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cef_rate_caption" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/cef_base_rate_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/record_left_padding"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toStartOf="@+id/cef_rate_eq"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cef_manual_rate_check">

        <com.vividprojects.protoplanner.Widgets.PrefixedEditText
            android:id="@+id/cef_base_rate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Base" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/cef_rate_eq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto"
        android:text=" = "
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/cef_currency_rate_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cef_currency_rate_layout" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/cef_currency_rate_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/cef_rate_eq"
        app:layout_constraintTop_toBottomOf="@id/cef_manual_rate_check">

        <com.vividprojects.protoplanner.Widgets.PrefixedEditText
            android:id="@+id/cef_currency_rate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Current" />
    </android.support.design.widget.TextInputLayout>


</android.support.constraint.ConstraintLayout>
