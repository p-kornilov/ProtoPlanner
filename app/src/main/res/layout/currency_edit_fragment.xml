<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="0px"
        android:layout_height="0px"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/cef_name_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/record_left_padding"
        android:layout_marginStart="@dimen/record_left_padding"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/cef_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name" />
    </android.support.design.widget.TextInputLayout>

    <com.vividprojects.protoplanner.Widgets.CustomTextInputLayout
        android:id="@+id/cef_code_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/record_left_padding"
        android:layout_marginStart="@dimen/record_left_padding"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cef_name_layout">

        <EditText
            android:id="@+id/cef_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Code" />
    </com.vividprojects.protoplanner.Widgets.CustomTextInputLayout>

    <com.vividprojects.protoplanner.Widgets.CustomTextInputLayout
        android:id="@+id/cef_symbol_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/record_left_padding"
        android:layout_marginStart="@dimen/record_left_padding"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toStartOf="@id/cef_card_preview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cef_code_layout">

        <EditText
            android:id="@+id/cef_symbol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Symbol" />
    </com.vividprojects.protoplanner.Widgets.CustomTextInputLayout>

    <Spinner
        android:id="@+id/cef_position"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/record_left_padding"
        android:layout_marginEnd="@dimen/record_left_padding"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        app:layout_constraintEnd_toStartOf="@id/cef_card_preview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cef_symbol_layout" />

    <CheckBox
        android:id="@+id/cef_spacing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/record_left_padding"
        android:layout_marginTop="8dp"
        android:text="Enable spacing"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cef_position" />

    <android.support.v7.widget.CardView
        android:id="@+id/cef_card_preview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="@dimen/record_left_padding"
        app:layout_constraintBottom_toBottomOf="@id/cef_spacing"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/cef_symbol_layout">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/t10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/record_left_padding"
                android:layout_marginTop="13dp"
                android:fontFamily="@font/roboto"
                android:text="Example"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/alt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="false"
                android:fontFamily="@font/roboto"
                android:textColor="@android:color/black"
                android:text="$100.00"
                android:textSize="20sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="@dimen/record_left_padding"
        android:layout_marginTop="13dp"
        android:background="@color/black_divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cef_spacing"/>


    <TextView
        android:id="@+id/cef_rate_caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/record_left_padding"
        android:layout_marginTop="13dp"
        android:fontFamily="@font/roboto"
        android:paddingBottom="13dp"
        android:text="Exchange rate"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider2" />

    <CheckBox
        android:id="@+id/cef_manual_rate_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/record_left_padding"
        android:layout_marginTop="8dp"
        android:text="Auto update rate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cef_rate_caption" />

    <android.support.v7.widget.CardView
        android:id="@+id/cef_card_preview_rate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/record_left_padding"
        app:layout_constraintStart_toStartOf="@id/cef_card_preview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/divider2">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/t11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/record_left_padding"
                android:layout_marginTop="13dp"
                android:fontFamily="@font/roboto"
                android:text="Example"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/cef_rate_preview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:text="$1.00 = f 100.00"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/cef_base_rate_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/record_left_padding"
        android:layout_marginStart="@dimen/record_left_padding"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toStartOf="@id/cef_card_preview_rate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cef_manual_rate_check">

        <EditText
            android:id="@+id/cef_base"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Base currency" />
    </android.support.design.widget.TextInputLayout>

</android.support.constraint.ConstraintLayout>
